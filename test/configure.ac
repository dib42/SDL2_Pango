AC_INIT([SDL2Pango_test], [2.1.5])

AC_CANONICAL_HOST
AC_CANONICAL_TARGET

SDLPANGO_VERSION=2.1.5

AM_INIT_AUTOMAKE

AC_PROG_CC

AC_C_CONST

SDL_VERSION=2.0.2

AM_PATH_SDL2($SDL_VERSION,
            :,
            AC_MSG_ERROR([*** SDL version $SDL_VERSION not found!])
)

CFLAGS="$CFLAGS $SDL_CFLAGS"
LIBS="$LIBS $SDL_LIBS"

PKG_CHECK_MODULES(SDLPANGO, SDL2_Pango >= $SDLPANGO_VERSION, , AC_MSG_ERROR([*** SDL2_Pango >= $SDLPANGO_VERSION not found!]))
CFLAGS="$CFLAGS $SDLPANGO_CFLAGS"
LIBS="$LIBS $SDLPANGO_LIBS"

AC_CONFIG_FILES(Makefile)

# Finally create all the generated files
AC_OUTPUT
